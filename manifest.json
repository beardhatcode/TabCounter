{
   "name": "TabCounter",
   "description": "Tab counting extension that allows you to set goals and shows tab statistics.",
   "icons": {  "16": "icon_16.png",
               "48": "icon_48.png",
               "128": "icon_128.png" 
   },
   "permissions": [ "tabs", "notifications", "storage" ],
   "background": {
         "scripts" : ["background.js"],
         "persistent": false
      },
   "browser_action": {
      "default_popup": "main.html",
      "default_icon": "icon.png" 
      },
   "web_accessible_resources": ["img/completed_goal.png"],
   "update_url": "http://clients2.google.com/service/update2/crx",
   "version": "1.5",
   "manifest_version": 2
}
